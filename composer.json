{
    "name": "modernquiz/app",
    "description": "ModernQuiz - Interaktives Lernen neu gedacht",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-mysqli": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "ModernQuiz\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}