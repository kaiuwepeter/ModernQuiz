# ModernQuiz Configuration
# Kopiere diese Datei zu .env und f√ºlle die Werte aus

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=modernquiz
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Application
APP_NAME="ModernQuiz"
APP_URL=http://localhost
APP_ENV=development
APP_DEBUG=true

# Security
APP_KEY=
SESSION_LIFETIME=3600
SESSION_MAX_PER_USER=5
PASSWORD_MIN_LENGTH=10
PASSWORD_MAX_LENGTH=30

# Email
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@modernquiz.com
MAIL_FROM_NAME="ModernQuiz"

# User Management
USER_INACTIVITY_WARNING_DAYS=30
USER_INACTIVITY_DELETE_DAYS=35
USER_EMAIL_VERIFICATION_REQUIRED=true

# Features
FEATURE_MULTIPLAYER=true
FEATURE_CHALLENGES=true
FEATURE_ACHIEVEMENTS=true
FEATURE_REFERRALS=true
FEATURE_REVIEWS=true

# Referral System
REFERRAL_BONUS_POINTS=100
REFERRAL_BONUS_FOR_REFERRER=50

# Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=uploads/

# API
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=modernquiz_

# Logging
LOG_LEVEL=debug
LOG_PATH=logs/

# External Services
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
